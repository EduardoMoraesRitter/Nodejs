    <h1>Pessoas</h1>
        <ul>
            <% pessoas.forEach(function(pessoa){ %>
                <li><%= pessoa.nome %> <%= pessoa.idade %></li>
            <% }) %>
        </ul>

    <h1>Autor</h1>
        <ul>
            <% autores.forEach(function(autor){ %>
                <li><%= autor.nome %></li>
            <% }) %>
        </ul>
